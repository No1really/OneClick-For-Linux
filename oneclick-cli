MODULE_DIR="$SCRIPT_DIR/modules"

# Box styling configuration
box_width=66

# Center text function - STANDARDIZED
center_box() {
    local w=$1; shift
    local termw=$(tput cols 2>/dev/null || echo 80)
    local left=$(( (termw - w) / 2 ))
    [[ $left -lt 0 ]] && left=0
    for line in "$@"; do
        printf "%*s%s\n" "$left" "" "$line"
    done
}

